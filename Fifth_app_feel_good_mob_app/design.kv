<LoginScreen>:
    GridLayout:
        cols: 1
        GridLayout:
            cols: 1
            Label:
                text: 'User login'
            TextInput:
                hint_text: 'User Name'
                id: username
            TextInput:
                hint_text: 'Password'
                hidinput: 1
                id: password
            Button:
                text: 'Login'
                on_press: root.login(root.ids.username.text, root.ids.password.text)
        GridLayout:
            cols: 2
            Button:
                text: 'Forgot Password'
            Button:
                text: 'Sign up'
                on_press: root.sign_up()
            Label:
                id: login_wrong
                text: ''


<SignUpScreen>
    GridLayout:
        cols: 1
        Label:
            text: 'Sign up for a space journey'
        TextInput
            hint_text: 'Enter username'
            id: username
        TextInput
            hint_text: 'Enter password'
            id: password
        Button:
            text: 'Submit'
            on_press: root.add_user(root.ids.username.text, root.ids.password.text)

<SignUpScreenSuccess>
    GridLayout:
        cols: 1
        Label:
            text: 'Successfull sign up!'
        Button:
            text: 'Login Page'
            on_press: root.go_to_login()

<LoginScreenSuccess>
    GridLayout:
        cols: 1
        Button:
            on_press: root.logout()
        Label:
            text: 'How do you feel?'
        TextInput:
            hint_text: 'Things to try: sad, happy, unloved, ...'
            id: mood
        Button:
            text: 'Enlight me'
            on_press: root.enlight(root.ids.mood.text)
        Label:
            text: ''
            id: output

<RootWidget>
    LoginScreen:
        name: 'login_screen'
    SignUpScreen:
        name: 'sign_up_screen'
    SignUpScreenSuccess
        name: 'sign_up_screen_success'
    LoginScreenSuccess
        name: 'login_screen_success'
